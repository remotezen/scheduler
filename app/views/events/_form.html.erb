<%= form_with(model: event, local: true, class: 'form-horizontal') do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.select :name,  User.normal_user.collect{|u|[u.name]},
      {include_blank:'Name'}, class: 'form-control' %>
  </div>

  <div class="form-group event-tooltip" >
    <%= form.label :start_time %>
    <%= form.datetime_select :start_time, id: :event_start_time , class: 'form-control'
   %>
  </div>
  <div class="form-group event-tooltip" >
    <%= form.label :end_time %>
    <%= form.datetime_select :end_time, id: :event_end_time , class: 'form-control'
   %>
  </div>



  <div>
    <%= form.submit %>
  </div>
<% end %>
